<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowGolya"
    android:orientation="vertical"
    tools:context="golyapresszo.hu.golyaapp.MainActivity">


    <ImageView
        android:id="@+id/imageViewBanner"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewSign"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/banner2"/>

    <TextView
        android:id="@+id/textViewSign"
        style="@style/sign_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sign"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonMenu"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBanner"
        app:layout_constraintBottom_toTopOf="@+id/imageViewEmberek"/>

    <ImageButton
        android:id="@+id/imageButtonMenu"
        style="@style/menu_button_style"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="@dimen/keyline1"
        android:foregroundGravity="clip_vertical"
        app:layout_constraintLeft_toRightOf="@+id/textViewSign"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageViewEmberek"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBanner"
        app:srcCompat="@drawable/golya_nav_ico" />

    <ImageView
        android:id="@+id/imageViewEmberek"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSign"
        app:layout_constraintBottom_toTopOf="@+id/textViewMotto"
        app:srcCompat="@drawable/emberek" />
    <TextView
        android:id="@+id/textViewMotto"
        style="@style/motto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/motto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewEmberek"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewInfo"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollViewInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMotto"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonFacebook"
        app:layout_constraintVertical_weight="1">

        <include
            layout="@layout/info_view"/>
    </android.support.v4.widget.NestedScrollView>


    <ImageButton
        android:id="@+id/imageButtonFacebook"
        style="@style/menu_button_style.bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/keyline1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonEmail"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewInfo"
        app:srcCompat="@drawable/facebook_ico_white" />

    <ImageButton
        android:id="@+id/imageButtonEmail"
        style="@style/menu_button_style.bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonFacebook"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonHttp"
        app:layout_constraintTop_toBottomOf="@id/scrollViewInfo"
        app:srcCompat="@drawable/email_ico_golya_white" />

    <ImageButton
        android:id="@+id/imageButtonHttp"
        style="@style/menu_button_style.bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/http_ico_white"
        app:layout_constraintHorizontal_weight="1"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageButtonEmail"
        app:layout_constraintTop_toBottomOf="@id/scrollViewInfo"
        app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>
