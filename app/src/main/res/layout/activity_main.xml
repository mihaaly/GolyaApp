<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="golyapresszo.hu.golyaapp.MainActivity"
    android:orientation="vertical"
    android:background="@color/yellowGolya">


    <ImageView
        android:id="@+id/imageViewBanner"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner2"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewSign"
        style="@style/sign_style"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="0.5"
        android:text="@string/sign"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonMenu" />

    <ImageButton
        android:id="@+id/imageButtonMenu"
        style="@style/menu_button_style"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:srcCompat="@drawable/golya_nav_ico"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBanner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewSign"
         />

</android.support.constraint.ConstraintLayout>
