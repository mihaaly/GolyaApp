<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowGolya"
    android:orientation="vertical"
    tools:context="golyapresszo.hu.golyaapp.MainActivity">

    <!-- Top banner. -->

    <ImageView
        android:id="@+id/imageViewBanner"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textViewSign"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner2" />

    <!-- Business name text. -->
    <TextView
        android:id="@+id/textViewSign"
        style="@style/sign_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sign"
        app:layout_constraintBottom_toTopOf="@+id/imageViewEmberek"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonMenu"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBanner" />

    <!-- Navigation icon. -->
    <ImageButton
        android:id="@+id/imageButtonMenu"
        style="@style/menu_button_style"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:foregroundGravity="clip_vertical"
        android:paddingRight="@dimen/keyline1"
        app:layout_constraintBottom_toTopOf="@+id/imageViewEmberek"
        app:layout_constraintLeft_toRightOf="@+id/textViewSign"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBanner"
        app:srcCompat="@drawable/nav_button" />

    <!-- Mood picture.-->
    <ImageView
        android:id="@+id/imageViewEmberek"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/textViewMotto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSign"
        app:layout_constraintVertical_weight="1"
        app:srcCompat="@drawable/emberek" />

    <!-- Description, motto of the place.-->
    <TextView
        android:id="@+id/textViewMotto"
        style="@style/motto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/motto"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewEmberek" />

    <!-- Middle yellow part with address, opening hours, telephone number. -->
    <include
        android:id="@+id/scrollViewInfo"
        layout="@layout/info_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenuBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMotto"
        app:layout_constraintVertical_weight="2" />

    <!-- Bottom menu bar, with intent actions: web page, compose email, go to facebook page.-->
    <include layout="@layout/bottom_menu_bar" />


</android.support.constraint.ConstraintLayout>
